<?xml version="1.0" encoding="utf-8"?>
<com.example.xyzreader.ui.detail.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:background="@color/accent">

    <TextView
        android:id="@+id/header_view_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        tools:text="Second Variety"/>

    <TextView
        android:id="@+id/header_view_sub_title"
        style="@style/SecondaryText"
        android:textColor="@color/white_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        tools:text="May 1, 1953\nby Philip K. Dick"/>

</com.example.xyzreader.ui.detail.HeaderView>